{
    "name": "hi-folks/data-blocks",
    "description": "Data class for managing nested arrays and JSON data.",
    "keywords": [
        "Hi-Folks",
        "JSON",
        "data",
        "PHP",
        "array"
    ],
    "homepage": "https://github.com/hi-folks/data-blocks",
    "license": "MIT",
    "authors": [
        {
            "name": "Roberto B.",
            "email": "roberto.butti@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1|^8.2|^8.3"
    },
    "require-dev": {
        "laravel/pint": "^1.2",
        "pestphp/pest": "^2.34",
        "phpstan/phpstan": "^1.6",
        "rector/rector": "^1"
    },
    "autoload": {
        "psr-4": {
            "HiFolks\\DataType\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HiFolks\\DataBlocks\\Tests\\": "tests"
        }
    },
    "scripts": {
        "all": [
            "@test", "@format", "@phpstan"
        ],
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "phpstan": "vendor/bin/phpstan",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
